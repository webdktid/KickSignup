@page

@model IndexModel
@{
    ViewData["Title"] = "Tilmelding til KICK - din løbestart";
}
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>


<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="3000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
    
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/image1.jpg" alt="Image1" class="img-rounded" />
            <div class="carousel-caption" role="option">
                <p>
                    Vi har gjort os særlig umage for at modtage dig i løbeklubberne
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/image2.jpg" alt="Image2" class="img-rounded" />
            <div class="carousel-caption" role="option">
                <p>
                    Meld dig til her, Så er du godt på vej til at blive løber!
                </p>
            </div>
        </div>
    
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<br/>



<form class="form-horizontal white" method="post">

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Contact.Name" class="col-md-3 right">Navn:</label>
                <div class="col-md-6">
                    <input asp-for="Contact.Name" placeholder="Skriv dit navn" class="form-control" />
                    <span asp-validation-for="Contact.Name"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Contact.Email" class="col-md-3 right">Email:</label>
                <div class="col-md-6">
                    <input asp-for="Contact.Email" placeholder="Skriv din email" class="form-control" />
                    <span asp-validation-for="Contact.Email"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Contact.ZipCode" class="col-md-3 right">Postnummer:</label>
                <div class="col-md-6">
                    <input asp-for="Contact.ZipCode" placeholder="Skriv dit postnummer" class="form-control" />
                    <span asp-validation-for="Contact.ZipCode"></span>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Contact.Phone" class="col-md-3 right">Telefonnummer:</label>
                <div class="col-md-6">
                    <input asp-for="Contact.Phone" placeholder="Skriv dit telefonnummer" class="form-control" />
                    <span asp-validation-for="Contact.Phone"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Contact.PreferredClub" class="col-md-3 right">Ønsket klub:</label>
                <div class="col-md-6">
                    <input asp-for="Contact.PreferredClub" placeholder="skriv navn på klub" class="form-control" />
                    <span asp-validation-for="Contact.PreferredClub"></span>
        <small>Hvis du kender navnet på den klub du gerne vil starte i</small>
                </div>
            </div>
        </div>
    </div>

   



    <div class="row">
        <div class="col-md-12">
            <button type="submit" class="btn-success">Ja tak!, kontakt mig</button>
        </div>
    </div>
</form>





